// Refer to http://eslint.org/docs/rules/ for details on each rule and how to configure them
{
  "extends": [
    "../.eslintrc.json"
  ],
  "env": {
    "mocha": true
  },
  "globals": {
    "should": true,
    "expect": true,
    "chai": true,
    "Promise": true,
    "sinon": true,
    "nock": true,
    "moment": true,
    "sailsApp": true
  },
  "rules": {
    "no-undefined": [
      "off"
    ],
    "no-console": [
      "warn"
    ],
    "no-magic-numbers": [
      "off"
    ],
    "no-invalid-this": [
      "off"
    ],
    "max-statements": [
      "off"
    ]
  }
}
